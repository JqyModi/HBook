platform :ios, '8.0'
#platform :ios
use_frameworks! # LeanCloud Swift SDK can only be integrated as framework.

target ‘HBook’ do
#在终端输入swift查看当前swift版本号,通过pod trunk info LeanCloud查看当前的swift版本对应的版本做如下添加
    pod "LeanCloud", "~> 10.1.0"
#    pod "LeanCloud"
    pod "AVOSCloud"               # 数据存储、短信、云引擎调用等基础服务模块
#    pod "Alamofire"
#    pod 'AVOSCloudCrashReporting' # 错误报告模块
end
